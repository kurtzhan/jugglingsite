<div class="content-wrapper">
   <div class="w-container">
      <h1 class="section-header"><%= params[:tag].nil? ? '贴子' : params[:tag] %></h1>
      <div class="w-dyn-list">
         <div class="w-dyn-items">
         <% @articles.each do |article| %>
            <div class="w-dyn-item">
               <div class="post-wrapper">
                  <div>
                     <%= link_to article_path(article), :class => "blog-title-link w-inline-block" do %>
                      <h1 class="blog-title"><%= article.title %> </h1>
                     <% end %>
                     <div class="post-info-wrapper">
                        <div class="post-info"><%= article.created_at.to_date.to_s %></div>
                        <div class="post-info">|</div>
                        <% article.tags.each do |tag| %>
                        <%= link_to tag.name, articles_path(tag: tag.name), :class => "post-info when-link w--current" %>
                        <% end %>
                     </div>
                     <p class="post-summary"><%= article.description %></p>
                     <%= link_to "阅读全文 >>", article_path(article), :class => "button-round w-button" %>
                  </div>
               </div>
            </div>         
         <% end %>
         </div>
      </div>
   </div>
</div>
