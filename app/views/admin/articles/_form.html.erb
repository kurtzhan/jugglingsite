<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control", placeholder: "Enter title", required: true %>
  <span class="help-block"><i>* This field is required</i><span>
</div>

<div class="form-group">
  <%= f.label :is_home_page %>
  <%= f.check_box :is_home_page %>
</div>

<div class="form-group">
  <%= f.label :ordinal %>
  <%= f.number_field :ordinal, class: "form-control", placeholder: "0" %>
</div>

<div class="form-group">
  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control", placeholder: "Enter description", required: true %>
  <span class="help-block"><i>* This field is required</i><span>
</div>

<div class="form-group">
  <%= f.label :body %>
  <%= f.cktext_area :body, :ckeditor => {:toolbar => 'Full'} %>
  <span class="help-block"><i>* This field is required</i><span>
</div>

<div class="form-group">
  <% Category.all.each do |c| %>
  <div>
    <%= check_box_tag "article[category_ids][]", c.id, @article.categories.include?(c) %>
    <%= c.name %>
  </div>
  <% end %>
</div>
